<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>
    
    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
      <item name="android:background">@drawable/actionbar_background</item>
      <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
      <!--<item name="android:icon">@drawable/rating_important</item> -->
    </style>
    
    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/Widget.Holo.ActionBar">
      <item name="android:textColor">#FFFFFF</item>
      <item name="android:textSize">@dimen/action_bar_title_text_size</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>
